{
	"exclude": [
		"node_modules/",
		"dev/**/*",
		"dist/**/*",
		"gulpfile.js",
		"typings/**/*"
	],
	"include": [
		"src/**/*"
	],
	"compilerOptions": {
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"target": "es6",
		"watch": false,
		"module": "commonjs",
		"sourceMap": true,
		"moduleResolution": "node",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"noEmit": true
	}
}