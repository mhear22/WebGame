{
	"exclude": [
		"node_modules/",
		"dev/**/*",
		"dist/**/*",
		"gulpfile.js",
		"typings/**/*"
	],
	"include": [
		"src/**/*", "tests/scene.spec.ts"
	],
	"compilerOptions": {
    "downlevelIteration": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"target": "es2015",
		"watch": false,
		"module": "esnext",
		"sourceMap": false,
		"moduleResolution": "node",
		"removeComments": true,
		"emitDecoratorMetadata": true
	}
}